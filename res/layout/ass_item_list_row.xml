<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingLeft="15dp"
   android:paddingRight="15dp"
   android:paddingTop="15dp"
   android:descendantFocusability="beforeDescendants"
   >

<LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="15dp"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
     
      android:background="@drawable/selector_card_background"
     
      android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:orientation="horizontal">
      
        	      
      <TextView
         android:id="@+id/textTitleAss1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
		 android:textAppearance="?android:attr/textAppearanceLarge"
		 android:textStyle="bold"
         android:text="NGO Name"/>

      
 
  	</LinearLayout>
      
      <TextView
         android:id="@+id/textTitleAss2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge"
        
         android:text="Rakesh Sharma"/>
      
      <TextView
         android:id="@+id/textTitleAss3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="887273722"
         />
      <TextView
         android:id="@+id/textTitleAss4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="A,B,A+"
         />
      <TextView
         android:id="@+id/textTitleAss5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:maxLines="3"
         android:textStyle="italic"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="SMS Hospital,Jaipur,Rajasthan"
         /> 
</LinearLayout>
</FrameLayout>